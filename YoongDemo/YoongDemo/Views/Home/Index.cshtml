<!DOCTYPE html>
<html>
<head>
    <title>Yoong Demo</title>
    <link rel="stylesheet" href="/Contents/jquery-ui.min.css" />
    <link rel="stylesheet" href="/Contents/bootstrap.min.css" />
    
</head>
<body>
    <div class="container">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="inputDate" class="col-sm-2 control-label">Date of Birth: </label>
                    <input type="text" data-provide="datepicker" data-date-end-date="0d">

            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" onclick="addButtonClick()" class="btn btn-default">Submit</button>
                </div>
            </div>
        </form>
        <div id="msg">

        </div>
        <div id="displayBirth">

        </div>
    </div>
    
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script type="text/javascript">
        $('.datepicker').datepicker({
            startDate: '-3d'
        });
    </script>
    <script>
        //$(function () {
        //    $('#datepicker').datepicker({
        //        dateFormat: 'yy-mm-dd',
        //        showButtonPanel: true,
        //        changeMonth: true,
        //        changeYear: true
        //    });
        //});

        function addButtonClick() {
            var dateOfbirth = $("#datepicker").val();
            alert(dateOfbirth);
            $.ajax({
                type: "POST",
                url: "/Home/DisplayBirth",
                data: {
                    dateOfbirth: dateOfbirth,
                }
            })
            .done(function (msg) {
                $("#displayBirth").html(msg);
            });
        }
    </script>
</body>

</html>
